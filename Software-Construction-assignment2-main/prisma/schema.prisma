datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
    tasks    Task[]
}

model Task {
    id          Int      @id @default(autoincrement())
    title       String
    description String
    status      String   @default("todo")
    dueDate     DateTime
    userId      Int
    user        User     @relation(fields: [userId], references: [id])
    createdAt   DateTime @default(now())
}
